import java.util.*;

class Main {
    public static void main(String args[]) {
        System.out.print("Enter a number:");
        Scanner sc=new Scanner(System.in);
        int n=sc.nextInt() , sum=0;
        System.out.print("The sum of digits of a number:");
        while(n!=0){
            int digit=n%10;
            sum+=digit;
            n=n/10;
        }
        System.out.print(sum);
            }
     }
