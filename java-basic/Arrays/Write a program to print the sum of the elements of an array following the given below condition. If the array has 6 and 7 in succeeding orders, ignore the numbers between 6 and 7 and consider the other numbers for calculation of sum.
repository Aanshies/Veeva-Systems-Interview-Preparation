import java.util.*;

class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        System.out.println("Enter array elements (-1 to stop):");
        ArrayList<Integer> a = new ArrayList<>();

        while (true) {
            int x = sc.nextInt();
            if (x == -1) break;
            a.add(x);
        }

        int res = 0;
        boolean skip = false;
        boolean sixFound = false;

        for (int i = 0; i < a.size(); i++) {
            int val = a.get(i);
            if (val == 6) {
                sixFound = true;
                skip = true;
                continue;
            }

            if (skip && val == 7) {
                skip = false;
                sixFound = false;
                continue;
           }

            if (!skip) {
              res += val;
            }
        }


       if (sixFound) {
          res = 0;
          for (int v : a) {
              res += v;
            }
        } 
        System.out.println("Sum="+res);
    }
}
