import java.util.*;
class Main{
    public static void main(String args[]){
        Scanner sc=new Scanner(System.in);
        String s1=sc.nextLine(), s2=sc.nextLine();
        String res="";
        int i=0;
        while (i < s1.length() || i < s2.length()) {
            if(i<s1.length())
                res+=s1.charAt(i);
            if(i<s2.length())
                res+=s2.charAt(i);
            i++;
        }
        System.out.println(res);
    }
}
